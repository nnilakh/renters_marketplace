<!--Niki: Start - Flash Messages: F[0] Message type; F[1] Message content-->
<% unless flash.empty? %>
	<script type="text/javascript">
	<% flash.each do |f| %>
		<% type = f[0].to_s.gsub('alert', 'error').gsub('notice','info') %>
		toastr['<%= type %>']('<%= f[1] %>')
		<% end %> 
	</script>
<% end %>
